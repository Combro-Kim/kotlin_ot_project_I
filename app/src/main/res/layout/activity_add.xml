<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".AddActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toTopOf="parent"
        android:text="댓글 달기"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        android:background="@color/grey" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />


    <TextView
        android:id="@+id/nameTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김재현"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/nameEditText1"
        android:layout_width="310dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/nameTextView1"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView1"/>

    <TextView
        android:id="@+id/nameTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김재혁"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/nameEditText2"
        android:layout_width="310dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideLine"
        app:layout_constraintStart_toEndOf="@id/nameTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/nameTextView2"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView1"/>

    <TextView
        android:id="@+id/nameTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임채명"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/nameEditText3"
        android:layout_width="310dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideLine"
        app:layout_constraintStart_toEndOf="@id/nameTextView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/nameTextView3"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView3"/>

    <TextView
        android:id="@+id/nameTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이성민"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/nameEitText4"
        android:layout_width="310dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideLine"
        app:layout_constraintStart_toEndOf="@id/nameTextView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/nameTextView4"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView4"/>




    <Button
        android:id="@+id/plusButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="추가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>